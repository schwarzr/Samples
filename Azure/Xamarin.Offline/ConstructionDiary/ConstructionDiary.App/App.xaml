<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionDiary.App.App"
             xmlns:vm="clr-namespace:ConstructionDiary.App.ViewModels"
             xmlns:v="clr-namespace:ConstructionDiary.App.Views"
             xmlns:conv="clr-namespace:ConstructionDiary.App.Converter">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->

            <DataTemplate x:Key="CreateIssue">
                <v:CreateIssueView />
            </DataTemplate>

            <DataTemplate x:Key="Areas">
                <v:AreasView />
            </DataTemplate>

            <DataTemplate x:Key="MenuViewModel">
                <v:MenuView />
            </DataTemplate>

            <DataTemplate x:Key="Settings">
                <v:SettingsView />
            </DataTemplate>

            <DataTemplate x:Key="Dashboard">
                <ContentPage Title="Dashboard">
                    <Label Text="Dashboard"></Label>
                </ContentPage>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>