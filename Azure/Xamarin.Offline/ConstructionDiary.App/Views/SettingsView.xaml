<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionDiary.App.Views.SettingsView">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="save.png" Text="save" Command="{Binding Path=SaveCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Settings"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand" />

            <Label Text="ServerUrl"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand" />
            <Entry Text="{Binding Path=Options.ServerUrl}"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>